@model IEnumerable<Trabalho1SW.Models.Fornecedor>

@{
    ViewData["Title"] = "Dashboard de Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Certifique-se de ajustar o layout
}

<style>

    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Fundo animado */
    body {
        background: linear-gradient(-45deg, #007bff, #0056b3, #33ccff, #001f4d);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: #333;
        font-family: 'Roboto', sans-serif;
    }

    h1, h2 {
        text-shadow: 2px 2px 5px rgba(0, 0, 0);
        color: white
    }

    .card {
        border: none;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .table {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(5px);
        border-radius: 10px;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-3px);
    }
</style>

<div class="container mt-5">
    <h1 class="text-center fw-bold mb-5">Fornecedores</h1>

    <!-- Tabela de Fornecedores -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Lista de Fornecedores</h2>
        <a asp-action="Create" class="btn btn-light btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Adicionar Fornecedor
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle text-white">
            <thead class="table-light text-dark">
                <tr>
                    <th>Razão Social</th>
                    <th>Nome Fantasia</th>
                    <th>CNPJ</th>
                    <th>Email</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fornecedor in Model)
                {
                    <tr>
                        <td>@fornecedor.RazaoSocial</td>
                        <td>@fornecedor.NomeFantasia</td>
                        <td>@fornecedor.cnpj</td>
                        <td>@fornecedor.Email</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@fornecedor.Id" class="btn btn-info btn-sm mx-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@fornecedor.Id" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@fornecedor.Id" class="btn btn-danger btn-sm mx-1">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

