@model Trabalho1SW.Models.Fornecedor

@{
    ViewData["Title"] = "Adicionar Fornecedor";
}

<style>

    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    h1, h2 {
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8);
        color: #ffffff;
    }

    .card {
        border: none;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.5);
        }

    .table {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(5px);
        border-radius: 10px;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
        }
    body {
        background: linear-gradient(-45deg, #007bff, #0056b3, #33ccff, #001f4d);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: #333;
        font-family: 'Roboto', sans-serif;
</style>

<div class="container my-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px; border-radius: 15px; background-color: rgba(255, 255, 255, 0.9);">
        <h2 class="text-center text-primary mb-4">Adicionar Fornecedor</h2>
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="RazaoSocial" class="form-label text-primary">Razão Social</label>
                <input asp-for="RazaoSocial" class="form-control" placeholder="Digite a Razão Social" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NomeFantasia" class="form-label text-primary">Nome Fantasia</label>
                <input asp-for="NomeFantasia" class="form-control" placeholder="Digite o Nome Fantasia" />
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label text-primary">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Digite o Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="cnpj" class="form-label text-primary">CNPJ</label>
                <input asp-for="cnpj" class="form-control" placeholder="Digite o CNPJ" />
                <span asp-validation-for="cnpj" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefone" class="form-label text-primary">Telefone</label>
                <input asp-for="Telefone" class="form-control" placeholder="Digite o Telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="cep" class="form-label text-primary">CEP</label>
                <input asp-for="cep" class="form-control" placeholder="Digite o CEP" />
                <span asp-validation-for="cep" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PessoaContato" class="form-label text-primary">Pessoa de Contato</label>
                <input asp-for="PessoaContato" class="form-control" placeholder="Digite o Nome da Pessoa de Contato" />
                <span asp-validation-for="PessoaContato" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="rua" class="form-label text-primary">Rua</label>
                <input asp-for="rua" class="form-control" placeholder="Digite o nome da rua" />
                <span asp-validation-for="rua" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Numero" class="form-label text-primary">Número</label>
                <input asp-for="Numero" class="form-control" placeholder="Digite o número do endereço" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="bairro" class="form-label text-primary">Bairro</label>
                <input asp-for="bairro" class="form-control" placeholder="Digite o bairro" />
                <span asp-validation-for="bairro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="cidade" class="form-label text-primary">Cidade</label>
                <input asp-for="cidade" class="form-control" placeholder="Digite a cidade" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="estado" class="form-label text-primary">Estado</label>
                <input asp-for="estado" class="form-control" placeholder="Digite o estado" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pais" class="form-label text-primary">País</label>
                <input asp-for="Pais" class="form-control" placeholder="Digite o país" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-4">Adicionar</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
