@model Trabalho1SW.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<style>

    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    body {
        background: linear-gradient(-45deg, #007bff, #0056b3, #33ccff, #001f4d);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: #333;
        font-family: 'Roboto', sans-serif;
</style>

<div class="container my-5">
    <div class="card shadow-lg p-4 mx-auto text-center" style="max-width: 600px; border-radius: 15px; background-color: rgba(255, 255, 255, 0.9);">
        <h2 class="text-danger mb-4">Excluir Fornecedor</h2>
        <h5 class="mb-3">Tem certeza que deseja excluir este fornecedor?</h5>
        <div class="alert alert-warning">
            Esta ação é irreversível!
        </div>
        <dl class="row text-start mt-4">
            <dt class="col-sm-4">Razão Social</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.RazaoSocial)</dd>

            <dt class="col-sm-4">Nome Fantasia</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeFantasia)</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">CNPJ</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.cnpj)</dd>

            <dt class="col-sm-4">Telefone</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

            <dt class="col-sm-4">CEP</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.cep)</dd>

            <dt class="col-sm-4">Pessoa de Contato</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PessoaContato)</dd>

            <dt class="col-sm-4">Rua</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.rua)</dd>

            <dt class="col-sm-4">Número</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Numero)</dd>

            <dt class="col-sm-4">Bairro</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.bairro)</dd>

            <dt class="col-sm-4">Cidade</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.cidade)</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.estado)</dd>

            <dt class="col-sm-4">País</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Pais)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar" class="btn btn-danger btn-sm" />
            <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>

